<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="Theme.TurnosRotativosApp" parent="android:Theme.Material.Light.NoActionBar" />
    <!-- Tema para la Splash Screen -->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen"> <!--SplashScreen -->
       <!-- Establece el fondo de la splash screen. Puedes usar un color o un drawable.
        <item name="windowSplashScreenBackground">@color/white</item>-->
        <!-- Establece el icono en el centro de la splash screen. -->
        <!-- Asegúrate de tener un drawable llamado 'splash_icon' en res/drawable. -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/construction_workers</item>
        <!-- Opcional: Establece un icono para la parte inferior (branding). -->
        <!-- <item name="windowSplashScreenAnimationDuration">2000</item> // Duración de la animación -->
        <item name="postSplashScreenTheme">@style/Theme.TurnosRotativosApp</item> // Tema a aplicar después de la splash
    </style>


</resources>